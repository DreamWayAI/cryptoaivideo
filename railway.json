{
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "./Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10
  },
  "services": [
    {
      "name": "redis",
      "image": "redis:7-alpine",
      "volumes": ["/data"],
      "internalPort": 6379
    }
  ],
  "envVars": {
    "NODE_ENV": "production",
    "MAX_FILE_SIZE": "2147483648",
    "CHUNK_SIZE": "5242880",
    "REDIS_URL": "${{REDIS_PRIVATE_URL}}"
  }
}