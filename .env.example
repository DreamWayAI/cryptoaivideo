# Telegram Bot Configuration
TELEGRAM_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-app.up.railway.app/webhook

# S3/R2 Configuration
S3_BUCKET=your-bucket-name
S3_REGION=auto
S3_ENDPOINT=https://your-account.r2.cloudflarestorage.com
S3_ACCESS_KEY=your_access_key_here
S3_SECRET_KEY=your_secret_key_here

# Redis Configuration (Railway provides this automatically)
REDIS_URL=redis://localhost:6379

# File Processing Limits
MAX_FILE_SIZE=2147483648  # 2GB in bytes
CHUNK_SIZE=5242880         # 5MB in bytes

# Server Configuration
PORT=8000
WORKERS=4
NODE_ENV=production

# Optional: Vizard API (if you have it)
VIZARD_API_KEY=your_vizard_api_key_here
VIZARD_API_URL=https://api.vizard.ai/v1/process
